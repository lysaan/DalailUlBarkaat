<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".fragments.DaroodFragment">


  <TextView
    android:id="@+id/activity_title"
    style="@style/activity_title"
    android:layout_marginBottom="0dp"
    android:fontFamily="@font/jameel_noori_nastalee_regular"
    android:textSize="@dimen/_22sdp"
    android:text="@string/dalail_ul_albarkaat" />
  <TextView
    android:id="@+id/count_0"
    android:visibility="gone"
    style="@style/battery_two_box_title"
    android:layout_marginTop="0dp"
    android:textColor="@color/red"
    android:layout_gravity="center_horizontal"
    android:text="@string/please_connect_to_internet_for_latest_data" />


  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:id="@+id/eth_row"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/_5sdp"
      android:orientation="vertical">
      <LinearLayout
        android:id="@+id/darood_pak_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
          style="?attr/cardStyle"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/_5sdp"
          android:layout_weight=".5"
          app:cardCornerRadius="@dimen/_8sdp"
          app:cardElevation="@dimen/_8sdp"
          app:cardMaxElevation="@dimen/_10sdp"
          app:contentPadding="@dimen/_5sdp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
              android:id="@+id/darood_pak_count"
              style="@style/battery_two_box_title"
              android:text="@string/darood_pak" />

            <TextView
              style="@style/battery_two_box_text"
              android:layout_marginBottom="0dp"
              android:text="@string/darood_pak_collection" />

            <TextView
              style="@style/battery_two_box_text"
              android:layout_marginTop="0dp"
              android:fontFamily="@font/jameel_noori_nastalee_regular"
              android:textSize="@dimen/_20sdp"
              android:text="@string/mujmuah_darood_pak" />


          </LinearLayout>
        </androidx.cardview.widget.CardView>

      </LinearLayout>
      <LinearLayout
        android:id="@+id/warid_ul_ghaib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
          style="?attr/cardStyle"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/_5sdp"
          android:layout_weight=".5"
          app:cardCornerRadius="@dimen/_8sdp"
          app:cardElevation="@dimen/_8sdp"
          app:cardMaxElevation="@dimen/_10sdp"
          app:contentPadding="@dimen/_5sdp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
              android:id="@+id/warid_ul_ghaib_count"
              style="@style/battery_two_box_title"
              android:text="@string/warid_ul_ghaib_with_urdu" />

            <TextView
              android:id="@+id/battery_cycle_count"
              style="@style/battery_two_box_text"
              android:gravity="center"
              android:text="@string/warid_ul_ghaib_min_noor_e_muhammadi_sallallhu_alaihi_wasalam" />

            <TextView
              style="@style/battery_two_box_text"
              android:layout_marginTop="0dp"
              android:fontFamily="@font/jameel_noori_nastalee_regular"
              android:textSize="@dimen/_20sdp"
              android:text="@string/warid_ul_gaib_urdu" />

          </LinearLayout>
        </androidx.cardview.widget.CardView>

      </LinearLayout>
      <LinearLayout
        android:id="@+id/munajat_bisalat_ibrahimia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
          style="?attr/cardStyle"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/_5sdp"
          android:layout_weight=".5"
          app:cardCornerRadius="@dimen/_8sdp"
          app:cardElevation="@dimen/_8sdp"
          app:cardMaxElevation="@dimen/_10sdp"
          app:contentPadding="@dimen/_5sdp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
              android:id="@+id/silsilat_dua_al_munfarid_biallah"
              style="@style/battery_two_box_title"
              android:text="@string/silsilat_dua_al_munfarid_biallah" />

            <TextView
              style="@style/battery_two_box_text"
              android:gravity="center"
              android:text="@string/munajat_rabb_al_bariyyah_bil_salat_al_ibrahimiya" />

            <TextView
              style="@style/battery_two_box_text"
              android:layout_marginTop="0dp"
              android:fontFamily="@font/jameel_noori_nastalee_regular"
              android:textSize="@dimen/_20sdp"
              android:text="@string/manajaat_urdu" />

          </LinearLayout>
        </androidx.cardview.widget.CardView>

      </LinearLayout><LinearLayout
        android:id="@+id/duain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
          style="?attr/cardStyle"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/_5sdp"
          android:layout_weight=".5"
          app:cardCornerRadius="@dimen/_8sdp"
          app:cardElevation="@dimen/_8sdp"
          app:cardMaxElevation="@dimen/_10sdp"
          app:contentPadding="@dimen/_5sdp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
              android:id="@+id/duain_text"
              style="@style/battery_two_box_title"
              android:text="@string/duain" />

            <TextView
              style="@style/battery_two_box_text"
              android:gravity="center"
              android:text="@string/ism_e_azam_and_prayers" />

            <TextView
              style="@style/battery_two_box_text"
              android:layout_marginTop="0dp"
              android:fontFamily="@font/jameel_noori_nastalee_regular"
              android:textSize="@dimen/_20sdp"
              android:text="@string/taqdeer_duain" />

          </LinearLayout>
        </androidx.cardview.widget.CardView>

      </LinearLayout>

    </LinearLayout>


  </ScrollView>

</LinearLayout>