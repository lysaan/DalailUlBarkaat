<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:id="@+id/eth_row"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/_5sdp">

  <androidx.cardview.widget.CardView
    style="?attr/cardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    card_view:cardCornerRadius="@dimen/_8sdp"
    card_view:cardElevation="@dimen/_8sdp"
    card_view:cardMaxElevation="@dimen/_10sdp"
    card_view:contentPadding="@dimen/_5sdp">
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="@dimen/_10sdp"
      android:gravity="center_horizontal">

      <TextView
        android:id="@+id/id"
        style="@style/cf_text"
        android:layout_marginTop="@dimen/_1sdp"
        android:textSize="@dimen/_10sdp"
        android:layout_alignParentTop="true"
        android:textAlignment="textStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1" />

      <TextView
        android:id="@+id/text"
        style="@style/cf_text"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_below="@id/id"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="@font/al_majeed_quranic_font"
        android:text="@string/darood_text" />

      <TextView
        android:id="@+id/text1"
        style="@style/cf_text"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/text"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="@font/jameel_noori_nastalee_regular"
        android:text="@string/darood_text" />

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_alignParentBottom="true">

        <ImageView
          android:id="@+id/report"
          android:visibility="visible"
          android:layout_width="@dimen/_20sdp"
          android:layout_alignParentStart="true"
          android:layout_height="@dimen/_20sdp"
          android:src="@drawable/report" />

        <ImageView
          android:id="@+id/youtube"
          android:visibility="visible"
          android:layout_width="@dimen/_20sdp"
          android:layout_centerHorizontal="true"
          android:layout_height="@dimen/_20sdp"
          android:src="@drawable/smart_display" />

        <ImageView
          android:id="@+id/share"
          android:visibility="visible"
          android:layout_width="@dimen/_20sdp"
          android:layout_alignParentEnd="true"
          android:layout_height="@dimen/_20sdp"
          android:src="@drawable/share" />


      </RelativeLayout>


    </RelativeLayout>

  </androidx.cardview.widget.CardView>
</LinearLayout>
