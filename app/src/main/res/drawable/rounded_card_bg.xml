<shape xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Solid background color -->
  <solid android:color="@color/white" />

  <!-- Rounded corners -->
  <corners android:radius="12dp" />

  <!-- Stroke for border -->
  <stroke
    android:width="1dp"
    android:color="#DDDDDD" />

  <!-- Padding inside the shape -->
  <padding
    android:left="16dp"
    android:top="16dp"
    android:right="16dp"
    android:bottom="16dp" />
</shape>
